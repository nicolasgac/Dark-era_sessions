\section{Projet DARK-ERA}

\subsection{Contexte et objectifs}
%\subsection{Le radiotelescope SKA}

\begin{frame}{Le radiotelescope SKA}
  \begin{center}
        \includegraphics[width=0.9\textwidth]{ska_700_01.jpg}
    \end{center}
    
\end{frame}

\begin{frame}{Le pipeline SDP}
  \begin{center}
        \includegraphics[width=0.9\textwidth]{pipeline.png}
    \end{center}
    
\end{frame}

\begin{frame}{SKA, un défi $A^3$ à grande échelle}
\small{
\begin{block}{Le supercalculateur SDP (Science Data Processing), un projet HPC pionner}
  \begin{itemize}
  \item \textbf{Flux de données gigantesque} à traiter en \textbf{temps réel}
  \item Chaîne algorithmique \textbf{complexe} d'inversion de données 
  \item \textbf{Budget énergétique limité}
  \end{itemize}
\end{block}
    
  
  \begin{block}{Adéquation Algorithme Architecture ($A^3$) \textit{[thème C du GDR ISIS]} }
%\begin{block}{A l'interface de l'électronique et de l'informatique }
   %\underline{Définition} : 
   Meilleure \textbf{combinaison d’architectures et d’algorithmes} 
   %Recherche de la meilleure \textbf{combinaison d’architectures et d’algorithmes} %\only<3>{pour respecter les contraintes de temps, précision, coût, consommation énergétique et temps de développement.} %\only<1-2>{
      %\vspace{0.1cm}\\
       sous \textbf{contraintes} de temps de traitement, précision de calcul, consommation énergétique, coût du système de calcul et temps de développement
\end{block}
    }
\end{frame}

\begin{frame}{Objectifs Dark-era}
\scriptsize{
\begin{block}{\textbf{Objectif$\#$1} :  Construire SimSDP, simulateur exascale basée sur une description en flot de données}
    \begin{center}
    \includegraphics[width=0.9\textwidth ]{SimSDP_overview} % %et/ou [height=]
    \end{center}
\end{block}

\begin{block}{\textbf{Objectif$\#$2} : Explorer des architectures de coprocesseurs à basse consommation}
  $\implies$  cartes accélératrices à base de FPGA et MPPA (Kalray) alternative aux GPUs
\end{block}


\begin{block}{\textbf{Objectif$\#$3} : Apporter une contribution française à \textit{SKA computing}}
    SKA est à la fois une étude de cas pour $\#1$ et $\#2$ et un objectif applicatif en soi
\end{block}
}
\end{frame}

\subsection{Consortium}

\begin{frame}{Consortium (1/2)}
\vspace{-1cm}
    \begin{center}
      \includegraphics[width=11cm]{team_SKALLAS}
    \end{center}
\end{frame}


\begin{frame}{Consortium (2/2)}
\small{
\begin{block}{Enjeux et motivations du consortium}
\item \textbf{Outil SimSDP}
    \begin{itemize} \footnotesize{
      \item Défi commun de son adoption par les radioastronomes
    \item Utilisation pour d'autres applications \og flot de données \fg}
     \end{itemize}
     \item  \textbf{Exploration d'architectures alternatives aux GPU}
     \begin{itemize}
      \item Prototype FPGA de la chaine SDP de NenuFAR (Nançay) 
      \item Complémentarité avec projet connexe ExaSKA sur GPU
\end{itemize}
    \end{block}
    \begin{block}{Interactions enrichissantes au sein du consortium}
    \begin{tabular}{lcl}  
      Radiastronomie &\faArrowsH&  Problèmes inverses\vspace{0.1cm} \\
   Informatique HPC &\faArrowsH&  Electronique embarquée\vspace{0.1cm}\\
   $A^3$ \og outils \fg &\faArrowsH & $A^3$ \og proche applications/architecture \fg  
    \end{tabular}
    \end{block}
    }
\end{frame}


